<h1 class="editpage">メッセージ編集ページ</h1>

<%= form_with(model: @tecpost, local: true) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

<div class="form-group">
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
  
<div class="form-group">
  <%= f.label :content, 'メッセージ' %>
  <%= f.text_area :content, class: 'form-control', rows: 6 %>
</div>

<div class="field">  
    <%= f.label "画像をアップロード" %> 
    <%= f.file_field :image %>
</div>

 <%= f.submit '送信', class: 'btn btn-primary mt-2 mb-3' %>

<% end %>

<%= link_to '一覧に戻る', root_path %>